<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
	<table class="common_list">
		<thead>
			<th style="width: 30%;"></th>
			<th style="width: 70%;"></th>
		</thead>
		<tfoot>
		</tfoot>
		<tbody>
			{% if invalid_username is defined %}
			<tr class="{{ cycler(['row_odd', 'row_even'], 'cycle') }}">
				<td class="h_align_left v_align_top" colspan="2">
					<p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
				</td>
			</tr>
	        {% endif %}
			<tr class="{{ cycler(['row_odd', 'row_even'], 'cycle') }}">
				<td class="h_align_right v_align_top"><label for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label></td>
				<td class="h_align_left v_align_top"><input type="text" id="username" name="username" /></td>
			</tr>	
			<tr class="{{ cycler(['row_odd', 'row_even'], 'cycle') }}">
				<td class="h_align_centre v_align_middle" colspan="2">
			        <input type="submit" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}" />
			    </td>
			</tr>
		</tbody>
	</table>
</form>